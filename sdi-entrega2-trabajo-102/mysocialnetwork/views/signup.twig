{% extends "layout.twig" %}

{% block title %} Registrar usuario {% endblock %}

{% block main_container %}
  <h2>Registrar usuario</h2>
  <form class="form-horizontal" method="post" action="/users/signup" >
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Email:</label>
      <div class="col-sm-10">
        <input id="email" type="email" class="form-control" name="email"
               placeholder="email@email.com" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="name">Nombre:</label>
      <div class="col-sm-10">
        <input id="name" type="name" class="form-control" name="name"
               placeholder="Nombre" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="surname">Apellidos:</label>
      <div class="col-sm-10">
        <input id="surname" type="surname" class="form-control" name="surname"
               placeholder="Apellidos" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="password">Password:</label>
      <div class="col-sm-10">
        <input  id="password" type="password"  class="form-control" name="password"
                placeholder="Contraseña" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="passwordCheck">Confirmar Password:</label>
      <div class="col-sm-10">
        <input  id="passwordCheck" type="password"  class="form-control" name="passwordCheck"
                placeholder="Repite la contraseña" required="true" />
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Registrar</button>
      </div>
    </div>
  </form>
{% endblock %}